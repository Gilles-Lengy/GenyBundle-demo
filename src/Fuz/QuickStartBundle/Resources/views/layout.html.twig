{# FuzQuickStartBundle::layout.html.twig #}

{% extends 'FuzQuickStartBundle::base.html.twig' %}

{% block left_menu %}
    {% if is_granted('ROLE_USER') %}
        {{ knp_menu_render('FuzQuickStartBundle:Builder:userLeftMenu') }}
    {% else %}
        {{ knp_menu_render('FuzQuickStartBundle:Builder:mainLeftMenu') }}
    {% endif %}
{% endblock %}

{% block right_menu %}
    {% if is_granted('ROLE_USER') %}
        {{ knp_menu_render('FuzQuickStartBundle:Builder:userRightMenu') }}
    {% else %}
        {{ knp_menu_render('FuzQuickStartBundle:Builder:mainRightMenu') }}
    {% endif %}
{% endblock %}


{% block translations %}
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{ 'quickstart.locale.title' | trans }} <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                {% block supported_locales %}
                    {% block locale_en %}<li><a href="{{ path('reload', {'_locale': 'en'}) }}"><img class="lang-image" src="{{ asset('bundles/fuzquickstart/img/countries/United-Kingdom.png') }}" alt=""/> English</a></li>{% endblock %}
                    {% block locale_fr %}<li><a href="{{ path('reload', {'_locale': 'fr'}) }}"><img class="lang-image" src="{{ asset('bundles/fuzquickstart/img/countries/France.png') }}" alt=""/> Fran&ccedil;ais</a></li>{% endblock %}
                {% endblock %}
            </ul>
        </li>
    </ul>
{% endblock %}
